---
/**
 * Componente SEO para gestionar metadatos, Open Graph y Twitter Cards.
 */

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  canonicalURL?: string;
}

const {
  title = "Camping Arequita | Lavalleja, Uruguay",
  description = "Camping Arequita - Camping municipal en Lavalleja, Uruguay. Cabañas, motorhome, parcelas para acampar, piscinas y más.",
  keywords = "camping, arequita, lavalleja, uruguay, cabañas, turismo, naturaleza, reserva, vacaciones, aire libre",
  image = "/og-image.jpg", // Asegúrate de tener una imagen por defecto en public/
  canonicalURL = Astro.url.href,
} = Astro.props;

// Combinar el título si es necesario
const formattedTitle = title.includes("Camping Arequita") ? title : `${title} | Camping Arequita`;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<meta name="generator" content={Astro.generator} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{formattedTitle}</title>
<meta name="title" content={formattedTitle} />
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />

<!-- Open Graph / Facebook -->
<!-- Ayuda a controlar cómo se muestra el enlace cuando se comparte en FB o WhatsApp -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={formattedTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<!-- Ayuda a controlar cómo se muestra el enlace en Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={formattedTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />

<!-- Sitemap -->
<!-- Enlace al mapa del sitio para rastreadores -->
<link rel="sitemap" href="/sitemap-index.xml" />

<!-- Robots -->
<!-- Permite que los buscadores indexen el sitio -->
<meta name="robots" content="index, follow" />
